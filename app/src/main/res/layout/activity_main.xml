<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/liquorsBar"
        android:layout_width="match_parent"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/red"
        android:textSize="18sp" />


    <!-- android:numColumns=3 is the number of columns for Grid View
          android:horizontalSpacing is the space between horizontal grid items -->
    <GridView
        android:id="@+id/idliquorsGV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="6dp"
        android:numColumns="3"
        android:layout_below="@+id/liquorsBar"
        android:padding="10dp"
        android:verticalSpacing="6dp"
        android:clickable="true"/>

</RelativeLayout>